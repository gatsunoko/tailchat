<!DOCTYPE html>
<html>
<head>
  <title>Tailchat</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="content">

<% flash.each do |name, msg| %>  
	<%= content_tag :div, msg, :id => "flash#{name}" %>  
<% end %>  

<div id="user_nav">  
  <% if current_user %>  
    ログイン中... <strong><%= current_user.username %></strong>
    <%= link_to "ユーザー情報", edit_user_path(current_user) %> 
    <%= link_to "ログアウト", log_out_path %>  
  <% else %>  
    <%= link_to "ユーザー登録", sign_up_path %> or   
    <%= link_to "ログイン", log_in_path %>  
  <% end %>  
</div> 

<%= yield %>

</div>
</body>
</html>
